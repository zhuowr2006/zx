<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="65dip"
        android:layout_marginTop="100dip"
        android:src="@drawable/submit_ok" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_74"
        android:layout_marginLeft="@dimen/margin_71"
        android:layout_marginRight="@dimen/margin_71"
        android:text="@string/result_tv_tips"
        android:textSize="@dimen/textSize_16" />

    <Button
        android:id="@+id/btn_know"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_48"
        android:layout_marginLeft="@dimen/margin_83"
        android:layout_marginRight="@dimen/margin_83"
        android:background="@drawable/register_btn_green_selector"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/fd_register_done"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_18" />

